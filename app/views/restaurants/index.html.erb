<div class="container">
  <p style="color: green">
    <%= notice %>
  </p>

  <h1 style="text-align: center;">Restaurants</h1>
  <div class="container">
    <div class="card" id="restaurants">
      <div class="card-body">
        <% @restaurants.each do |restaurant| %>
        <div class="card">
          <%= render restaurant %>
            <p>
              <%= link_to "View Detail" , restaurant, class: "btn btn-success" %>
            </p></div>
            <% end %>

      </div>
    </div>
  </div><br>
  <%= link_to "New restaurant" , new_restaurant_path, class: "btn btn-primary" %>
</div>

